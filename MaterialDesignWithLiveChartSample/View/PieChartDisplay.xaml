<UserControl x:Class="MaterialDesignWithLiveChartSample.View.PieChartDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MaterialDesignWithLiveChartSample.View"
             xmlns:lvchart="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:MaterialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" Background="{DynamicResource MaterialDesignPaper}" Foreground="{StaticResource MaterialDesignBody}"
             d:DesignHeight="400" d:DesignWidth="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="PieChart Content" HorizontalAlignment="Center" VerticalAlignment="Top" Style="{StaticResource TextBlockPaperTitle}"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Chart Data Input" Margin="5,0" Style="{StaticResource TextBlockAccentContent}"/>
            <TextBox Width="auto" Margin="5,0" MaterialDesign:HintAssist.Hint="First Data" Style="{StaticResource TextBoxAccentContent}"/>
            <TextBox Width="auto" Margin="5,0" MaterialDesign:HintAssist.Hint="Second Data" Style="{StaticResource TextBoxAccentContent}"/>
            <Button Content="Add" Margin="5,0"/>
        </StackPanel>
        <lvchart:PieChart Grid.Row="2" LegendLocation="Left" Hoverable="False" Style="{StaticResource PieChartStyle}">
            <lvchart:PieChart.Series>
                <lvchart:PieSeries Title="Maria" Values="3" DataLabels="True"
                               />
                <lvchart:PieSeries Title="Charles" Values="4" DataLabels="True" 
                               />
                <lvchart:PieSeries Title="Frida" Values="6" DataLabels="True" 
                               />
                <lvchart:PieSeries Title="Frederic" Values="2" DataLabels="True" 
                               />
            </lvchart:PieChart.Series>
        </lvchart:PieChart>
    </Grid>
</UserControl>
